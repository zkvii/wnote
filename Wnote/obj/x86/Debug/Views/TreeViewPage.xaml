<Page x:ConnectionId='1'
    x:Class="Wnote.Views.TreeViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:model="using:Wnote.Core.Models"
    xmlns:templateSelectors="using:Wnote.TemplateSelectors"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="CompanyTemplate"                                 >
            <winui:TreeViewItem x:ConnectionId='43'
                                                                
                                              IsExpanded="False">
                <TextBlock x:ConnectionId='44'                             Margin="{StaticResource XXSmallTopRightBottomMargin}" />
            </winui:TreeViewItem>
        </DataTemplate>

        <DataTemplate x:Key="CompanyContentTemplate"                                 >
            <StackPanel x:ConnectionId='31'>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Text="Company ID"
                        Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock x:ConnectionId='41'
                                                 
                        Margin="{StaticResource SmallLeftMargin}"
                        Style="{StaticResource TitleTextBlockStyle}" />
                </StackPanel>
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Company name" />
                <TextBlock x:ConnectionId='32'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                />
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Contact name" />
                <TextBlock x:ConnectionId='33'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Contact title" />
                <TextBlock x:ConnectionId='34'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                 />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Contact phone" />
                <TextBlock x:ConnectionId='35'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                          />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Contact fax" />
                <TextBlock x:ConnectionId='36'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                        />
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Address" />
                <TextBlock x:ConnectionId='37'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                            />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="City" />
                <TextBlock x:ConnectionId='38'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                         />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Country" />
                <TextBlock x:ConnectionId='39'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                            />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Postal code" />
                <TextBlock x:ConnectionId='40'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                               />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="OrderTemplate"                               >
            <winui:TreeViewItem x:ConnectionId='28'
                                                            
                                               IsExpanded="False">
                <TextBlock x:ConnectionId='29'                                  Margin="{StaticResource XXSmallTopRightBottomMargin}" />
            </winui:TreeViewItem>
        </DataTemplate>

        <DataTemplate x:Key="OrderContentTemplate"                               >
            <StackPanel x:ConnectionId='17'>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Text="Order ID"
                        VerticalAlignment="Center"
                        Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock x:ConnectionId='26'
                                               
                        VerticalAlignment="Center"
                        Margin="{StaticResource SmallLeftMargin}"
                        Style="{StaticResource TitleTextBlockStyle}" />
                </StackPanel>
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Order date" />
                <TextBlock x:ConnectionId='18'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                              />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Required date" />
                <TextBlock x:ConnectionId='19'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                 />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Shipped date" />
                <TextBlock x:ConnectionId='20'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                />
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Status" />
                <TextBlock x:ConnectionId='21'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                           />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Freight" />
                <TextBlock x:ConnectionId='22'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                            />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="OrderTotal" />
                <TextBlock x:ConnectionId='23'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                               />
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Shipper name" />
                <TextBlock x:ConnectionId='24'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Shipper phone" />
                <TextBlock x:ConnectionId='25'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                 />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="OrderDetailTemplate"                                     >
            <winui:TreeViewItem x:ConnectionId='14'
                                                                >
                <TextBlock x:ConnectionId='15'                                  TextWrapping="Wrap" Margin="{StaticResource XXSmallTopRightBottomMargin}" />
            </winui:TreeViewItem>
        </DataTemplate>

        <DataTemplate x:Key="OrderDetailContentTemplate"                                     >
            <StackPanel x:ConnectionId='3'>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Text="Product ID"
                        Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock x:ConnectionId='12'
                                                 
                        Margin="{StaticResource SmallLeftMargin}"
                        Style="{StaticResource TitleTextBlockStyle}" />
                </StackPanel>
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Product name" />
                <TextBlock x:ConnectionId='4'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                />
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Category name" />
                <TextBlock x:ConnectionId='5'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                 />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Category description" />
                <TextBlock x:ConnectionId='6'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                        />
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Quantity per unit" />
                <TextBlock x:ConnectionId='7'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                                    />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Quantity" />
                <TextBlock x:ConnectionId='8'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                             />
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Unit price" />
                <TextBlock x:ConnectionId='9'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                              />
                <TextBlock
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Discount" />
                <TextBlock x:ConnectionId='10'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                             />
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="Total" />
                <TextBlock x:ConnectionId='11'
                    Style="{StaticResource DetailBodyBaseMediumStyle}"
                                          />

            </StackPanel>
        </DataTemplate>

        <templateSelectors:SampleDataTemplateSelector x:Key="TreeViewTemplateSelector"
            CompanyTemplate="{StaticResource CompanyTemplate}"
            OrderTemplate="{StaticResource OrderTemplate}"
            OrderDetailTemplate="{StaticResource OrderDetailTemplate}" />

        <templateSelectors:SampleDataTemplateSelector x:Key="ContentTemplateSelector"
            CompanyTemplate="{StaticResource CompanyContentTemplate}"
            OrderTemplate="{StaticResource OrderContentTemplate}"
            OrderDetailTemplate="{StaticResource OrderDetailContentTemplate}" />

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:ConnectionId='45' x:Name="treeViewColumn" MinWidth="150" MaxWidth="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid
            Background="{ThemeResource  SystemChromeMediumLowColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid x:ConnectionId='47'
                x:Name="header">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Uid="TreeViewTitle"
                    Margin="{StaticResource SmallLeftMargin}"
                    Style="{StaticResource ListTitleStyle}"
                    VerticalAlignment="Center" />
                <Button x:ConnectionId='49'
                    Grid.Column="1"
                    x:Uid="TreeView_CollapseAllButton"
                    Content="&#xF165;"
                    FontSize="14"
                    Padding="{StaticResource SmallLeftRightMargin}"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    Background="Transparent"
                                          />
            </Grid>
            <winui:TreeView x:ConnectionId='48'
                x:Name="treeView"
                Grid.Row="1"
                SelectionMode="Single"
                                                  
                                           
                ItemTemplateSelector="{StaticResource TreeViewTemplateSelector}" />
        </Grid>

        <ScrollViewer
            Grid.Column="1"
            Padding="{StaticResource DetailPageMargin}">
            <ContentControl x:ConnectionId='46'
                                                            
                ContentTemplateSelector="{StaticResource ContentTemplateSelector}" />
        </ScrollViewer>

        <controls:GridSplitter
            Grid.Column="1"
            GripperCursor="Default"
            HorizontalAlignment="Left"
            ResizeDirection="Auto"
            ResizeBehavior="BasedOnAlignment"
            CursorBehavior="ChangeOnSplitterHover"
            Width="16" />
    </Grid>
</Page>

